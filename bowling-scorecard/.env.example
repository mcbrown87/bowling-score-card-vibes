# Copy this file to .env (or .env.local) and fill in the secrets.
# Values without NEXT_PUBLIC_ stay on the server and are never exposed to the browser.

# --- Server-only configuration -------------------------------------------------
OPENAI_API_KEY=your_server_openai_key
OPENAI_MODEL=gpt-4o

ANTHROPIC_API_KEY=your_server_claude_key
ANTHROPIC_MODEL=claude-3-7-sonnet-latest

# Choose which provider runs by default (anthropic | openai)
DEFAULT_PROVIDER=anthropic

# Set to true to include the raw LLM response in API output (not recommended in prod)
INCLUDE_LLM_RAW=false

# Optional logging / telemetry values
SERVICE_NAME=bowling-scorecard
SENTRY_DSN=
SENTRY_RELEASE=

# --- Client-visible configuration ---------------------------------------------
# Leave unset to call the built-in Next.js API routes
NEXT_PUBLIC_API_BASE_URL=

# Enable this to auto-load the bundled sample image on mount (handy for demos)
NEXT_PUBLIC_ENABLE_AUTO_TEST_IMAGE=false

# Browser-side helpers (only use for local tinkering)
NEXT_PUBLIC_OPENAI_API_KEY=
NEXT_PUBLIC_ANTHROPIC_API_KEY=
